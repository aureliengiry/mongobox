{% extends "MongoboxTumblrBundle:Admin/Tumblr:layout.html.twig" %}

{% block title -%}
- Administration
{%- endblock title %}

{% block body %} 
	{{ parent() }}
	
	<a class="btn" href="{{ path('admin_tumblr') }}">
    	<i class="icon-arrow-left"></i> Retour
    </a>
    
	<h1>Tumblr edit</h1>
	
	<form action="{{ path('admin_tumblr_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
	    {{ form_widget(edit_form) }}
	    <p>
	        <button class="btn btn-primary" type="submit">Enregistrer</button>
	    </p>
	</form>
	
	<ul class="record_actions">
	    <li>
	        <form action="{{ path('admin_tumblr_delete', { 'id': entity.id }) }}" method="post">
	            {{ form_widget(delete_form) }}
	            <button class="btn btn-danger" type="submit">Supprimer</button>
	        </form>
	    </li>
	</ul>
{% endblock body %}