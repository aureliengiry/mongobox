<div class="navbar navbar-top navbar-inverse">
    <div class="navbar-inner">
        <div class="container-fluid">
            <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </a>

            <a class="brand" href="{{ path('wall_index') }}" style="padding : 0.3em;">
                <img src="{{ asset('bundles/mongoboxcore/img/logo/mongo-logo-header.png') }}"
                     style="height : 40px;"
                     alt="{{ project_name }}" title="{{ project_name }} - Homepage"
                />
            </a>

            <div class="nav-collapse nav-collapse-top collapse">
                {% if app.user %}
                    <ul class="nav full pull-right">
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle"
                               data-toggle="dropdown">{% include "MongoboxUsersBundle:User/Avatar:avatar.html.twig" with {user : app.user, avatarMini : true} %}
                                <b class="caret"></b></a>
                            <ul class="dropdown-menu" role="menu">
                                <li>
                                    <a href="{{ path('group_index') }}" title="Groupes">Liste des Groupes</a>
                                </li>
                                {% if app.user.groupsInvitations|length > 0 %}
                                    <li class="dropdown-submenu pull-left">
                                        <a href="" title="Invitations">{{ app.user.groupsInvitations|length }}
                                            invitation{% if app.user.groupsInvitations|length > 1 %}s{% endif %}</a>
                                        <ul class="dropdown-menu">
                                            {% for invitation in app.user.groupsInvitations %}
                                                <li>
                                                    <a href="{{ path('group_accept_invite', {'id' : invitation.id, 'id_user' : app.user.id}) }}"
                                                       title="Accepter l'invitation dans le groupe '{{ invitation.title }}'">{{ invitation.title }}</a>
                                                </li>
                                            {% endfor %}
                                        </ul>
                                    </li>
                                {% endif %}
                                <li class="divider"></li>
                                {% for group in app.user.groups %}
                                    <li class="dropdown-submenu pull-left">
                                        <a href="{{ path('group_change', {'id_group' : group.id}) }}"
                                           title="Groupes">{{ group.title }} {% if group.id == app.session.get('id_group') %}
                                                <span class="icon-ok"></span>{% endif %}</a>
                                        <ul class="dropdown-menu">
                                            <li>
                                                <a href="{{ path('group_edit', {'id' : group.id}) }}" title="Groupes">Modifier
                                                    le groupe</a>
                                            </li>
                                            {% if group.private %}
                                                <li>
                                                    <a href="{{ path('group_invite', {'id' : group.id}) }}"
                                                       title="Groupes">Inviter un utilisateur</a>
                                                </li>
                                            {% endif %}
                                        </ul>
                                    </li>

                                {% endfor %}
                                <li class="divider"></li>
                                <li>
                                    <a href="{{ path('user_edit') }}" title="Modifier votre compte"><span
                                                class="icon-edit"></span> Modifier votre compte</a>
                                </li>
                                <li>
                                    <a href="{{ path('_logout') }}" title="Déconnexion"><span class="icon-off"></span>
                                        Déconnexion</a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                {% endif %}

                <ul class="nav pull-right">
                    <li class="active"><a title="Go home" href="#"><i class="icon-home"></i> Home</a></li>
                    <li><a title="Manage users" href="#"><i class="icon-user"></i> Users</a></li>
                    <li class="dropdown">
                        <a data-toggle="dropdown" class="dropdown-toggle" href="#">Dropdown <b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li><a href="#">Action</a></li>
                            <li><a href="#">Another action</a></li>
                            <li><a href="#">Some link</a></li>
                            <li><a href="#">One more separated link</a></li>
                        </ul>
                    </li>


                </ul>



            </div>
        </div>
    </div>
</div>

