<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="utf-8">
    <title>{{project_name}} {% block title %}{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="{% block description %}{% endblock %}">
    <meta name="author" content="">

    <!-- Le styles -->
    <link href="{{ asset('bundles/mongoboxcore/css/bootstrap.min.css') }}" rel="stylesheet">
    <link href="{{ asset('bundles/mongoboxcore/css/styles.css') }}" rel="stylesheet">
    <link href="{{ asset('bundles/mongoboxjukebox/css/jukebox.css') }}" rel="stylesheet">
    <link href="{{ asset('bundles/mongoboxcore/css/fancymoves.css') }}" rel="stylesheet">
    <link href="{{ asset('bundles/mongoboxtumblr/css/tumblr.css') }}" rel="stylesheet">
	<link href="{{ asset('bundles/mongoboxcore/css/alertify/alertify.core.css') }}" rel="stylesheet">
	<link href="{{ asset('bundles/mongoboxcore/css/alertify/alertify.bootstrap.css') }}" rel="stylesheet">
    <link href="{{ asset('bundles/mongoboxcore/css/datatables/jquery.dataTables.css') }}" rel="stylesheet">
    <style>
      body {
        padding-top: 60px; /* 60px to make the container go all the way to the bottom of the topbar */
      }
    </style>
    <link href="{{ asset('bundles/mongoboxcore/css/bootstrap-responsive.min.css') }}" rel="stylesheet">
    {% block css %}{% endblock %}
	{% block stylesheets %}{% endblock %}

    <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->

    <!-- Le fav and touch icons -->
    <link rel="shortcut icon" href="{{ asset('bundles/mongoboxcore/ico/favicon.ico') }}">
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="{{ asset('bundles/mongoboxcore/ico/apple-touch-icon-144-precomposed.png') }}">
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="{{ asset('bundles/mongoboxcore/ico/apple-touch-icon-114-precomposed.png') }}">
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="{{ asset('bundles/mongoboxcore/ico/apple-touch-icon-72-precomposed.png') }}">
    <link rel="apple-touch-icon-precomposed" href="{{ asset('bundles/mongoboxcore/ico/apple-touch-icon-57-precomposed.png') }}">

    <script src="{{ asset('bundles/mongoboxcore/js/vendor/jquery/jquery.1.9.1.min.js') }}"></script>
	<script src="{{ asset('bundles/mongoboxcore/js/vendor/datatables/jquery.dataTables.min.js') }}"></script>
    <script src="{{ asset('bundles/mongoboxcore/js/vendor/jquery/jquery-ui-1.10.0.min.js') }}"></script>
    <script src="{{ asset('bundles/mongoboxcore/js/vendor/jquery/jquery.easing.js') }}"></script>
		<script>
			var basepath = "{{ path('wall_index') }}";
		</script>
    {% block headerJs %}{% endblock %}
  </head>

  <body>

  	{# Barre de navigation top #}
	{% if app.user %}
  	{% include "MongoboxCoreBundle::Navigation/navbar.html.twig" %}
	{% endif %}

    <div class="container">
        <!-- CONTENT HERE -->

	    {% for flashMessage in app.session.flashbag.get('success') %}
			<div class="alert alert-success">
				{{ flashMessage }}
			</div>
		{% endfor %}
	    {% for flashMessage in app.session.flashbag.get('notice') %}
			<div class="alert alert-notice">
				{{ flashMessage }}
			</div>
		{% endfor %}
	    {% for flashMessage in app.session.flashbag.get('info') %}
			<div class="alert alert-info">
				{{ flashMessage }}
			</div>
		{% endfor %}

      	{% block body %}{% endblock %}


    </div> <!-- /container -->

    <footer class="footer">
      	<div class="container">
            {% render controller("MongoboxStatisticsBundle:Footer:statistics") %}
	        <p>Â© {{project_name}} {{version}} By {{team_name}}</p>
        </div>
    </footer>

    <!-- Le javascript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="{{ asset('bundles/mongoboxcore/js/vendor/bootstrap/bootstrap.min.js') }}"></script>
	{% if app.user %}
    <script src="{{ asset('bundles/mongoboxcore/js/vendor/jquery/jquery.raty.js') }}"></script>
	<script src="{{ asset('bundles/mongoboxcore/js/vendor/alertify.min.js') }}"></script>
    <script src="{{ asset('bundles/mongoboxjukebox/js/jukebox.js') }}"></script>
	<script src="{{ asset('bundles/mongoboxusers/js/favoris.js') }}"></script>
	<script src="{{ asset('bundles/mongoboxtumblr/js/tumblr.js') }}"></script>
	<script src="{{ asset('bundles/mongoboxtumblr/js/addTumblr.js') }}"></script>
	<script src="{{ asset('bundles/mongoboxjukebox/js/manageTags.js') }}" type="text/javascript"></script>
	<script type="text/javascript">
		$(function()
		{
			addTumblr.init();
			favorisManager.init();
		});
		videoTags.urlLoadTag = '{{ url('video_tags_load_item') }}';
		videoTags.init();
	</script>
	{% endif %}
    {% block javascripts %}{% endblock %}

  </body>
</html>
