{% extends "MongoboxJukeboxBundle:Videos:layout.html.twig" %}

{% form_theme edit_form 'MongoboxCoreBundle:Form:mongobox_form_theme.html.twig' %}

{% block body %}
<h1>Videos edit</h1>

<form action="{{ path('videos_update', { 'id': entity.id }) }}" method="post" {{ form_start(edit_form) }}>
    {{ form_widget(edit_form) }}
    <p>
        <button type="submit">Edit</button>
    </p>
</form>

<ul class="record_actions">
    <li>
        <a href="{{ path('videos') }}" class="btn btn-default">
            Back to the list
        </a>
    </li>
    <li>
        <form action="{{ path('videos_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit" class="btn btn-danger" >Delete</button>
        </form>
    </li>
</ul>
{% endblock body %}
