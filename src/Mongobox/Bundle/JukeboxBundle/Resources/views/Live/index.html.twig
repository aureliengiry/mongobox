{% extends "MongoboxJukeboxBundle:Wall:layout.html.twig" %}

{% block title -%}- Live{%- endblock title %}

{% block body %}
    <script src="{{ asset('bundles/Mongoboxjukebox/js/live.js') }}" type="text/javascript"></script>
	<div class="marketing">
		<h1>{{ page_title }}</h1>
		{% if current_video is not null %}
			<div id="player"></div>

			<div class="video-rating">
				<span id="up-vote" class="vote-up-button">
					<a href="#">
						<img src="{{ asset('bundles/Mongoboxjukebox/img/thumb-up.png') }}" alt="thumb-up" title="Yeah !" />
					</a>
					<span id="up-score"></span>
				</span>
				<span id="down-vote" class="vote-down-button">
					<a href="#">
						<img src="{{ asset('bundles/Mongoboxjukebox/img/thumb-down.png') }}" alt="thumb-down" title="Bof..." />
					</a>
					<span id="down-score"></span>
				</span>
			</div>

			<span id="video-score"></span>

			<script type="text/javascript">
	          	var tag = document.createElement('script');
	          	tag.src = '//www.youtube.com/iframe_api';

	          	var firstScriptTag = document.getElementsByTagName('script')[0];
	          	firstScriptTag.parentNode.insertBefore(tag, firstScriptTag);

	          	var playerMode		= '{{ player_mode }}';
	          	var nextVideoUrl	= '{{ path('live_next') }}';
	          	var voteUrl			= '{{ path('live_vote') }}';
	          	var scoreUrl		= '{{ path('live_score') }}';

	          	var player;
	          	function onYouTubeIframeAPIReady()
	          	{
					$(document).ready(function() {
		          		player = new YT.Player('player', {
		          			height: '500px',
		          			width: '800px',
		          			videoId: '{{ current_video.videoGroup.video.lien }}',
		          			playerVars: {{ player_vars }},
		          			events: {{ player_events }}
		          		});
					});
	          	}
			</script>
			<script type="text/javascript">
				$(document).ready(function() {
					livePlayer = new LivePlayer();
					livePlayer.initialize('{{ current_video.id }}');

					connection = new WebSocket('{{ socket_params }}');
					connection.onmessage = function(e) {
						json = e.data;

						params = JSON.parse(json);
						params.mode	= '{{ player_mode }}';
						params.currentVideo = '{{ current_video.id }}';

						livePlayer.synchronizePlayerState(params);
					};
				});
			</script>
		{% else %}
			Jukebox HS
		{% endif %}
	</div>
{% endblock body %}
