<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="mongobox_users.listener.security.class">Mongobox\Bundle\UsersBundle\EventListener\SecureListener</parameter>
    </parameters>

    <services>
        <service id="mongobox_users.listener.security" class="%mongobox_users.listener.security.class%" >
            <tag name="kernel.event_listener" event="security.interactive_login" method="onSecurityInteractiveLogin" />
            <argument id="security.context" type="service"/>
            <argument id="doctrine.orm.entity_manager" type="service"/>
            <argument type="service" id="router"></argument>
            <argument type="service" id="event_dispatcher" />
        </service>
    </services>
</container>
